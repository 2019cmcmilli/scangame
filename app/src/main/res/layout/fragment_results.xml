<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#999">

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_result_cover"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="#000"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Title: ..."
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Primary Subject: ..."
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/tv_pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Pages: ..."
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/tv_pubdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Published: ..."
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/shelf_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Shelf"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/request_quick_fulfill_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Request"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/quick_discard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Discard"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:visibility="invisible"/>
    </LinearLayout>
    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/covers_anim"
        android:layout_width="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_height="wrap_content"
        />-->


</FrameLayout>